@import "../bootstrapStyl/bootstrap"
@import "nib"

animacion(parametro)
	-webkit-animation parametro
	-moz-animation parametro
	-o-animation parametro
	-ms-animation parametro
	animation parametro

blue_Cool = #006aef
.relative
	position relative

.bar
	background gray
	height .5em
	margin 1em 0
	width 100%
	.progreso
		animation 10s state infinite linear
		background #ef8814
		height .5em
		margin 1em 0
		width 50%
		.circle
			height 1em
			width 1em
			border-radius 50%
			background black
			position absolute
			right -.2em
			top -.2em
			animation 1s circle infinite
			

@keyframes state
	from
		background red
		width 0%
	to
		background blue_Cool
		width 100%

@keyframes circle
	0%
		-webkit-transform scale(.7)
	100%
		-webkit-transform scale(1.3)
		opacity 0

